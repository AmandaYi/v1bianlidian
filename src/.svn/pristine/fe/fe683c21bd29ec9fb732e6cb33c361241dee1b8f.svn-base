<ion-header>

  <ion-navbar>
    <ion-title>修改密码</ion-title>
  </ion-navbar>

</ion-header>


<ion-content padding id="regStyle">
  <p class="tips">请重新设置您的登录密码</p>
  <ion-list>
    <div class="listInputBox">
      <ion-item>
        <ion-input type="{{passwordType}}" name="passwordFirst" [(ngModel)]="passwordFirst" placeholder="请设置您的新密码(6~16位数字字母组合)"></ion-input>
      </ion-item>
      <div class="otherTools">
        <span tappable (click)="showPassword();">
            <img src="{{showPassImg}}"/>
        </span>
        <span tappable (click)="resetInputFirst();">
            <img src="assets/img/my_customer_management_close@3x.png"/>
        </span>
      </div>
    </div>
    <div class="listInputBox">
      <ion-item>
        <ion-input type="{{passwordType}}" name="passwordSecond" [(ngModel)]="passwordSecond" placeholder="请再次输入密码"></ion-input>
      </ion-item>
      <div class="otherTools">
        <span tappable (click)="showPassword();">
            <img src="{{showPassImg}}"/>
        </span>
        <span tappable (click)="resetInputSecond();">
            <img src="assets/img/my_customer_management_close@3x.png"/>
        </span>
      </div>
    </div>

  </ion-list>
  <button ion-button color="danger" tappable (click)="editPassword();" type="submit">提交并保存</button>

</ion-content>
