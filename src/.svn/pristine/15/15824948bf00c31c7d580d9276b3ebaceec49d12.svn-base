.message-box  {
    
    dl.ms-true {
        background: #fff;
        padding:6px 12px 12px 12px;
        margin-top:12px;
        dt {
            border-bottom:1px solid #ccc;
            line-height:3rem;
            color:#999;
            margin-bottom: 6px;
            font-size:1.2rem;
            span {
                color:#333;
                margin-right:12px;
            }
        }
        dd {
            h1 {
                font-size: 1.4rem;
                line-height:2rem;
                color:#333;
                -webkit-margin-before:0;
                -webkit-margin-after: 0;
            }
            p {
                color: #999;
                font-size:1.2rem;
            }
        }
    }

    dl.ms-null {
        padding:7rem 0 5rem 0;
        dt {
            width:4rem;
            height:4rem;
            margin: auto;
            img {
                width:100%;
            }
        }
        dd {
            text-align: center;
            line-height: 4rem;
            color:#666;
            font-size: 1.4rem;
            margin:0;
        }

    }


}