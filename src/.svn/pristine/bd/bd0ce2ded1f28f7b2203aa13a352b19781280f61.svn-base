<ion-header>

  <ion-navbar>
    <ion-title>设置个人头像</ion-title>
  </ion-navbar>

</ion-header>


<ion-content padding>
  <div class="headimgurl"><img src="{{profilePicture}}"></div>
  <div padding-top>
    <button ion-button block color="light" tappable (click)="choosePhoto()">从相册选一张</button>
  </div>
  <div padding-top>
    <button ion-button block color="light" tappable (click)="takePhoto()">拍一张照片</button>
  </div>
  <div padding-top>
    <button type="button" ion-button block tappable (click)="saveAvatar()">保 存</button>
  </div>
</ion-content>
