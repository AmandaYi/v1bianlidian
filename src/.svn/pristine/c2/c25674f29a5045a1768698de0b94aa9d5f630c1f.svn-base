.shop-appraise {
    background: #fff;
    padding:12px 0;
    text-align: center;
    dl {
        dt {
            padding-top:1rem;
            font-size:1.6rem;
            font-weight:bold;
            color:#333;
        }
        dd {
            
            i {
                display: inline-block;
                width:2rem;
                height:2rem;
                img {
                    width:100%;
                }
            }
        }
    }

    .range-ios .range-tick {
        width:2rem;
        height:2rem;
        background: url('../assets/img/order_details_star_gry@3x.png') center center no-repeat;
        background-size: 100% 100%;
        margin-left:-1rem;
        top:1rem;
    }
    .range-ios .range-tick-active {
        background: url('../assets/img/order_details_star_yellow@3x.png') center center no-repeat;
        background-size: 100% 100%;
    }
    .range-ios .range-bar {
        display: none;
    }
    .range-ios .range-knob-handle {
        display: none;
    }
    .item-ios.item-block .item-inner {
        border-bottom:0;
    }
    .item-ios {
        padding:0;
        width:13rem;
        margin: auto;
    }
    // .range-ios .range-slider {
    //     height: 2rem;
    // }
    .range-ios {
        padding:0 16px;
    }
}

.shop-appraise:after{
    content: '';
    display: block;
    clear: both;
}

.enter-sug {
    margin-top:12px;
    background: #fff;
    h1 {
        line-height: 3rem;
        font-size:1.2rem;
        padding:0 12px;
        border-bottom:1px solid #eee;
        -webkit-margin-before: 0;
        -webkit-margin-after: 0;
    }
    div {
        position:relative;
        padding: 12px;
        border-radius:5px;
        textarea {
            width:100%;
            border: none;
            background: #eee;
            resize: none;
            height:12rem;
            background: #f2f2f2;
            padding:5px;
            font-size:1.2rem;
        }
        div {
            padding: 0 12px;
            text-align: right;
            color: #999;
        }

    }
    div:after{
        content: '';
        display: block;
        clear: both;
    }
}

.add-goods-pic {
    margin-top:12px;
    background: #fff;
    h1 {
        line-height: 3rem;
        font-size:1.2rem;
        padding:0 12px;
        border-bottom:1px solid #eee;
        -webkit-margin-before: 0;
        -webkit-margin-after: 0;
    }

    dl{
        padding:12px;
        dd {
            display: inline-block;
            width:5rem;
            height:5rem;
            margin: 0;
            border-radius: 8px;
            background:#f2f2f2;
            margin-right: 12px;
            overflow: hidden;
            img {
                display: block;
                margin: auto;
                height: 100%;
            }
        }
        dd:last-child {
            background:#999 url(../assets/img/order_details_add@3x.png) no-repeat;
            background-size:100% 100%;
        }
    }

}

.info-tips {
    font-size:1.2rem;
    padding:0 12px 4rem 12px;
    line-height: 3rem;
    color:#666;
}

.submit-bar {
    width:100%;
    background: #f4f4f4;
    button {
        float: right;
        height:4.5rem;
        line-height: 4.5rem;
        color:#fff;
        font-size:1.6rem;
        width:25%;
        background:#d72227;
        
    }
}