page-coupon {
  .content {
    background: rgba(0, 0, 0, 0.7);
  }
  [padding] .scroll-content {
    padding: 16px;
    display: flex;
    flex-flow: column wrap;
    justify-content: center;
    align-items: center;
    background: transparent;
  }
  .couponBox {
    width: 250px;
    height: 250px;
    background: #e8e7de;
    padding: 0 10px;
    overflow: auto;
    box-shadow: 0 0 10px 1px #999;
  }
  .coupon {
    width: 100%;
    height: 4rem;
    margin-top: 5px;
    background: url(../assets/img/coupon.png) 0 0 no-repeat;
    background-size: 100% 100%;
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    align-items: center;
    .coupon-left {
      display: flex;
      flex-flow: column wrap;
      justify-content: center;
      align-items: center;
      span {
        color: #fff;
        margin-left: 1rem;
        font-size: 1rem;
      }
      span:nth-child(1) {
        font-size: 1.5rem;
      }
    }
    div {
      button {
        background: transparent;
        margin-right: 1rem;
        color: #000000;
      }
    }
  }
  .coupons {
    width: 100%;
    height: 4rem;
    margin-top: 5px;
    background: url(../assets/img/coupon.png) 0 0 no-repeat;
    background-size: 100% 100%;
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    align-items: center;
    .coupon-left {
      display: flex;
      flex-flow: column wrap;
      justify-content: center;
      align-items: center;
      span {
        color: #fff;
        margin-left: 1rem;
        font-size: 1rem;
      }
      span:nth-child(1) {
        font-size: 1.5rem;
      }
    }
    div {
      button {
        background: transparent;
        margin-right: 1rem;
        color: #000000;
      }
    }
  }
  .coupon1 {
    width: 100%;
    height: 4rem;
    margin-top: 5px;
    background: url(../assets/img/coupon1.png) 0 0 no-repeat;
    background-size: 100% 100%;
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    align-items: center;
    .coupon-left {
      display: flex;
      flex-flow: column wrap;
      justify-content: center;
      align-items: center;
      span {
        color: #fff;
        margin-left: 1rem;
        font-size: 1rem;
      }
      span:nth-child(1) {
        font-size: 1.5rem;
      }
    }
    div {
      button {
        background: transparent;
        margin-right: 1rem;
        color: #000000;
      }
    }
  }
  .close {
    width: 55px;
    height: 55px;
  }
  .quxiao {
    text-align: center;
    margin-top: 5px;
    height: 4rem;
    line-height: 4rem;
    border: 1px solid #ccc;
    background: #fff;
  }
}
