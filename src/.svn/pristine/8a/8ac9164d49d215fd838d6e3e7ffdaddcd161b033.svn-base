page-systembulletin {
  ion-content{
    background: repeat;
  }
  .content-ios {
    background: rgba(0,0,0,0.2);
  }
  .Bulletin{
    position: relative;
    margin-top: 4rem;
    background: #fff;
    border-radius: 8px;
    .Bulletinimg{
      width: 100%;
      height: 12rem;
      img{
        height: 100%;
        width: 100%;
      }
    }
    .del{
      position: absolute;
      top: 10px;
      right: 10px;
      width: 25px;
      height: 25px;
      img{
        height: 100%;
        width: 100%;
      }
    }
    .Bulletintxt{
      margin-top: 1rem;
      padding: 1rem 0.8rem;
      h3{
        font-size: 1.8rem;
        color: #2e3133;
      }
      p{
        margin-top: 0.5rem;
        font-size: 1.6rem;
        color: #2e3133;
        text-align: right;
      }
      span{
        font-size: 1.5rem;
        color: #2e3133;
      }
    }
    .know{
      border-top: 1px solid #dde0e4;
      width: 100%;
      height: 40px;
      line-height: 40px;
      text-align: center;
      font-size: 1.8rem;
      color: #2e3133;
    }
  }
  
}