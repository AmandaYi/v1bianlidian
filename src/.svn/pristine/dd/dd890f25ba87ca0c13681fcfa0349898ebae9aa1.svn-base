    .topbar {
        display: block;
        width:100%;
        background: #fff;
        border-bottom:1px solid #ccc;
        .segment-ios .segment-button:last-of-type {
            border-radius: 0;
        }
        .segment-ios .segment-button:first-of-type {
            border-radius: 0;
        }
        .segment-ios .segment-button.segment-activated {
            background: #fff;
            color:#d72227;
            font-weight: bold;
        }
        .segment-ios .segment-button {
            color: #999;
            border: 0;
            font-size:1.2rem;
            line-height:3.2rem;
        }
    }
    .topbar:after{
        content: '';
        display: block;
        clear: both;
    }


.mybooking-box {
    dl.mybooking-null {
        padding:7rem 0 5rem 0;
        dt {
            width:4rem;
            height:4rem;
            margin: auto;
            img {
                width:100%;
            }
        }
        dd {
            text-align: center;
            line-height: 4rem;
            color:#666;
            font-size: 1.4rem;
            margin:0;
        }

    }

    .mybooking-simple {
        background: #fff;
        margin-bottom: 12px;
        margin-top: 8px; 
        h1 {
            padding:.3rem 12px;
            line-height: 3rem;
            font-size: 1.4rem;
            -webkit-margin-before: 0;
            -webkit-margin-after: 0;
            border-bottom:1px solid #eee;
            span {
                font-weight: bold;
                i {
                height:2.2rem;
                width:2.2rem;
                display: block;
                float: left;
                margin-top:0.4rem;
                margin-right:6px;
                    img {
                        width:100%;
                    }
                }
            }
            small {
                float: right;
                font-size: 1.4rem;
                color:#4990E2;
            }
        }

        p {
            padding:0 12px;
            line-height: 3.6rem;
            font-size: 1.2rem;
            -webkit-margin-before: 0;
            -webkit-margin-after: 0;
            border-bottom:1px solid #eee;
            span {
                line-height: 3rem;
                label {

                }
            }
            small {
                float: right;
                font-size: 1.2rem;
                i {
                    font-style:normal;
                }
            }
            b {
                color:#d72227;
                font-size: 1.6rem;
            }
        }
        p.no-border {
            border:0;
        }
        
        p:after {
            content:'';
            display:block;
            clear:both;
        }
        dl {
            padding:12px;
            display: block;
            background: #f2f2f2;
            position: relative;
            dt {
                width:5rem;
                height:5rem;
                box-sizing: border-box;
                border:1px solid #ccc;
                background: #fff;
                float: left;
                margin-right: 6px;
                display: none;
                img {
                    width:100%;
                    height: 100%;
                }
            }
            //sass 循环变量
            $i: 3;
            @while $i > 0 {
            dt:nth-child(#{$i}) { display: block }
            $i: $i - 1;
            }

            dd {
                width:74%;
                float: left;
                box-sizing: border-box;
                padding-left:12px;
                text-align: left;
            }
            .dian {
                width: auto;
                position: relative;
                top: 1.3rem;
                font-size: 1.8rem;
                font-weight: bold;
                color: #999;
                letter-spacing: 2px;
            }
            

            
        }
        
        dl:after {
            content:'';
            display:block;
            clear:both;
        }

        div {
            padding:0.8rem 12px;
            text-align: right;
            button {
                display: inline-block;
                padding:0 12px;
                height: 2.2rem;
                line-height: 2rem;
                text-align: center;
                margin-left:6px;
                border-radius: 3px;
                box-sizing: border-box;
                border:1px solid #ccc;
                background: #fff;
                font-size:1.2rem;
            }
            button:last-child {
                background: #FEB402;
                color:#fff;
                border:1px solid #FEB402;
            }
        }
        .pro-list {
            padding:0 12px;
        }
    }//mybooking-simple


    .mybooking-more {
        background: #fff;
