recommend-today {
  // ion-header {
  //   margin-top: 20px;
  // }
  .header-ios .toolbar-background-ios,
  .footer-ios .toolbar-background-ios {
    border-bottom: 1px solid #ccc;
  }
  .Theme_Street {
    background: #ffffff;
    overflow: hidden;
    width: 100%;
    .Theme_Street-volume {
      width: 100%;
      div {
        width: 33.3%;
        float: left;
        padding: 1rem;
        p {
          display: block;
          text-align: center;
          float: left;
          margin-left: 2rem;
          font-size: 1.5rem;
        }
        img {
          height: 1rem;
          width: 1rem;
          float: left;
          margin-top: 6px;
          margin-left: 6px;
        }
      }
      .triangle {
        position: relative;
        .Upper_triangle {
          position: absolute;
          bottom: 1.2rem;
          left: 1rem;
          height: 0;
          width: 0;
          background: transparent;
          border-left: 8px solid transparent;
          border-bottom: 8px solid #D8D8D8;
          border-top: 8px solid transparent;
          border-right: 8px solid transparent;
          padding: 0;
        }
        .Lower_triangle {
          position: absolute;
          top: 1.2rem;
          left: 1rem;
          height: 0;
          width: 0;
          background: transparent;
          border-left: 8px solid transparent;
          border-bottom: 8px solid transparent;
          border-top: 8px solid #D8D8D8;
          border-right: 8px solid transparent;
          padding: 0;
        }
        .Upper_triangle.active {
          border-bottom: 8px solid #D72227;
        }
        .Lower_triangle.active {
          border-top: 8px solid #D72227;
        }
      }
    }
  }
  .Recommend_today {
    margin-top: 1rem;
    overflow: hidden;
    background: #ffffff;
    .Recommend_today-lis {
      div {
        overflow: hidden;
        width: 50%;
        box-sizing: border-box;
        border-bottom: 1px solid #eee;
        border-right: 1px solid #eee;
        float: left;
        img {
          width: 100%; // height: 12rem;
        }
        h4 {
          text-overflow: ellipsis;
          white-space: nowrap;
          overflow: hidden;
          font-size: 1.6rem;
          box-sizing: border-box;
          padding: 0 6px;
          margin: 6px 0;
        }
        p {
          box-sizing: border-box;
          padding: 0 6px;
          color: #ACACAC;
          font-size: 1.2rem;
          span:nth-child(1) {
            color: #D72227;
            font-size: 1.6rem;
            font-weight: bold;
            margin-right: 6px;
          }
          span:nth-child(2) {
            color: #999;
            text-decoration: line-through;
            font-size: 1rem;
          }
        }
      }
      div:nth-child(2n) {
        border-right: none;
      }
    }
  }
}
